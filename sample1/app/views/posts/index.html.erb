<div class="main posts-index">
  <div class="container">
    <% @posts.each do |post| %>
      <div class="posts-index-item">
        <% if post.title %>
          <h2><%= link_to(post.title, "/posts/#{post.id}") %></h2>
        <% else %>
          <h2><%= link_to("題名なし", "/posts/#{post.id}") %></h2>
        <% end %>
        <h2><%= link_to(post.content, "/posts/#{post.id}") %></h2>
        <p><%= l(post.created_at.in_time_zone('Tokyo'), format: :long) %></p>
      </div>
    <% end %>
    <%= paginate @posts %>
  </div>
</div>
